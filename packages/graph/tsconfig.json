{
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts"
  ]
}