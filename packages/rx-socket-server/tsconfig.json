{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "lib": ["dom", "es2019", "dom.iterable", "scripthost"],
    "noImplicitAny": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
  ]
}